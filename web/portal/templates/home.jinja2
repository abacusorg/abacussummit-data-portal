{%extends "base.jinja2"%}

{%block title%}Home{%endblock%}

{%block body%}
<!-- Page Header -->
<!-- Set background image for this header on the line below. -->
<header class="intro-header" style="background-image: url({{url_for('static', filename='img/home-bg.webp')}})">
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
        <div class="site-heading">
          <h1>AbacusSummit Data Portal</h1>
          <hr class="small">
          <span class="subheading">Public Access to AbacusSummit Data Products</span>
        </div>
      </div>
    </div>
  </div>
</header>

<!-- Main Content -->
<div class="container">
  {%include 'messages.jinja2'%}

  <div class="row">
    <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
      <div class="post-preview">
        <a href="/transfer" target="_self">
          <h2 class="post-title">Download</h2>
          <h3 class="post-subtitle">Download AbacusSummit data products</h3>
        </a>
      </div>
      <hr />
      <div class="post-preview">
        <a href="https://abacussummit.readthedocs.io/" target="_blank">
          <h2 class="post-title">Documentation <i class="fas fa-external-link-alt"></i></h2>
          <h3 class="post-subtitle">Browse the documentation, read the papers, see example code</h3>
        </a>
      </div>
      <hr />
      <div class="post-preview">
        <a href="/about" target="_self">
          <h2 class="post-title">About</h2>
          <h3 class="post-subtitle">About this portal and AbacusSummit</h3>
        </a>
      </div>

      {#
      <!-- Pager -->
      <ul class="pager">
        <li class="next">
          <a href="https://docs.globus.org/" target="_blank" rel="noopener">
            Learn more &rarr;
          </a>
        </li>
      </ul>
      #}
    </div>
  </div>
</div>
<hr />
{%endblock%}
